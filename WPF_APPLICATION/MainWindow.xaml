        </Button>
        <Button x:Name="Btn_TransferToFile" Content="Inserisci nel file" HorizontalAlignment="Left" Height="53" Margin="10,72,0,0" VerticalAlignment="Top" Width="247" FontFamily="Bahnschrift" FontSize="20" Click="Btn_TransferToFile_Click" Visibility="Hidden" >
            <Button.Background>
                <RadialGradientBrush GradientOrigin="0.5,1" SpreadMethod="Pad">
                    <GradientStop Color="White" Offset="0"/>
                    <GradientStop Color="#FFD24949" Offset="1"/>
                </RadialGradientBrush>
            </Button.Background>
            <Button.Effect>
                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="7" Opacity=".5"/>
            </Button.Effect>
        </Button>
        <Viewbox x:Name="Vbx_InputData" HorizontalAlignment="Left" Height="186" Stretch="Fill" VerticalAlignment="Top" Width="337" Margin="10,167,0,0">
            <Grid Height="187" Width="337">
                <Label x:Name="Lbl_Name" Content="Nome" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="121" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Surname" Content="Cognome" HorizontalAlignment="Left" Height="46" Margin="0,47,0,0" VerticalAlignment="Top" Width="121" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Age" Content="Età" HorizontalAlignment="Left" Height="46" Margin="0,94,0,0" VerticalAlignment="Top" Width="121" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Weight" Content="Peso" HorizontalAlignment="Left" Height="46" Margin="0,141,0,0" VerticalAlignment="Top" Width="121" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <TextBox x:Name="Tbx_Surname" HorizontalAlignment="Left" Height="46" Margin="122,47,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="Tbx_Name" HorizontalAlignment="Left" Height="46" Margin="122,0,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="Tbx_Age" HorizontalAlignment="Left" Height="46" Margin="122,94,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                <TextBox x:Name="Tbx_Weight" HorizontalAlignment="Left" Height="46" Margin="122,141,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="215" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
            </Grid>
        </Viewbox>
        <Viewbox x:Name="Vbx_Output" HorizontalAlignment="Center" Height="207" Stretch="Fill" VerticalAlignment="Top" Width="780" Margin="0,195,0,0" Visibility="Hidden">
            <Grid Height="207" Width="838">
                <Label x:Name="Lbl_Name_OutPut" Content="Nomi" HorizontalAlignment="Left" Height="46" VerticalAlignment="Top" Width="164" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Age_Output" Content="Età" HorizontalAlignment="Left" Height="46" Margin="507,0,0,0" VerticalAlignment="Top" Width="164" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Surname_Output" Content="Cognome" HorizontalAlignment="Left" Height="46" Margin="169,0,0,0" VerticalAlignment="Top" Width="164" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Weight_Output" Content="Peso" HorizontalAlignment="Left" Height="46" Margin="338,0,0,0" VerticalAlignment="Top" Width="164" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <Label x:Name="Lbl_Activity_Output" Content="Attività" HorizontalAlignment="Left" Height="46" Margin="676,0,0,0" VerticalAlignment="Top" Width="164" FontFamily="Bahnschrift" BorderThickness="1,1,1,1" FontSize="20" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">
                    <Label.Background>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </Label.Background>
                    <Label.BorderBrush>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="Black"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.BorderBrush>
                </Label>
                <ListBox x:Name="Lbx_Name_Output" HorizontalAlignment="Left" Height="161" Margin="0,46,0,0" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="164" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                <ListBox x:Name="Lbx_Weight_Output" HorizontalAlignment="Left" Height="161" Margin="338,46,0,0" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="164" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                <ListBox x:Name="Lbx_Surname_Output" HorizontalAlignment="Left" Height="161" Margin="169,46,0,0" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="164" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                <ListBox x:Name="Lbx_Age_Output" HorizontalAlignment="Left" Height="161" Margin="507,46,0,0" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="164" d:ItemsSource="{d:SampleData ItemCount=5}"/>
                <ListBox x:Name="Lbx_Activity_Output" HorizontalAlignment="Left" Height="161" Margin="676,46,0,0" FontFamily="Bahnschrift" Background="#FF6660B1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Top" Width="164" d:ItemsSource="{d:SampleData ItemCount=5}"/>
            </Grid>
        </Viewbox>
        <GroupBox x:Name="GpBx_Attività" HorizontalAlignment="Left" Height="216" Header="Informazioni Attività" Margin="602,135,0,0" VerticalAlignment="Top" Width="230" BorderBrush="#FFB76452" Foreground="#FFB76B6B" Visibility="Hidden">
            <StackPanel Height="347" Margin="10,0,19,0" Visibility="Visible">
                <RadioButton x:Name="RBCommerciante_0" Content="Commerciante" Height="42" Width="225" Checked="Attività_Checked" BorderBrush="Black" Background="#FFB76B6B" Visibility="Visible" >
                    <RadioButton.Foreground>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </RadioButton.Foreground>
                </RadioButton>
                <RadioButton x:Name="RBDipendente_1" Content="Dipendente" Height="42" Width="225" Checked="Attività_Checked" BorderBrush="Black" Background="#FFB76B6B" Visibility="Visible">
                    <RadioButton.Foreground>
                        <RadialGradientBrush>
                            <GradientStop Color="Black" Offset="1"/>
                            <GradientStop Color="White" Offset="0"/>
                        </RadialGradientBrush>
                    </RadioButton.Foreground>
                </RadioButton>
                <RadioButton x:Name="RBLiberoProfessionista_2" Content="Libero Professionista" Height="42" Width="225" Checked="Attività_Checked" BorderBrush="Black" Background="#FFB76B6B" Visibility="Visible" >

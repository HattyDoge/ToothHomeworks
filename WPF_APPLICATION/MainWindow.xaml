            </Grid>
        </Viewbox>
        <Viewbox x:Name="Vbx_Output" HorizontalAlignment="Center" Height="207" Stretch="Fill" VerticalAlignment="Top" Width="816" Margin="0,195,0,0" Visibility="Hidden">
            <Grid Height="207" Width="943">
